{
  "version": 2,
  "name": "currency-converter",
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1"
    },
    {
      "src": "^(?!/api/).*",
      "dest": "/public/index.html"
    }
  ]
}
